<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="447dp"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark"
            android:weightSum="3"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_dots"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/lato"
                android:text="@string/reset_password"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="299dp"
            android:orientation="vertical"
            android:background="@drawable/rectangle_container">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:src="@drawable/logo"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/new_pswd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img"
                android:layout_marginStart="30dp"
                android:layout_marginTop="36.9dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/lato"
                android:text="New Password"
                android:textColor="#000100"
                android:textSize="12sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/new_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/new_pswd"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/lato"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="12sp"
                app:endIconDrawable="@drawable/show_password_selector"
                app:passwordToggleEnabled="true" />

            <TextView
                android:id="@+id/cnfrm_pswd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_password"
                android:layout_marginStart="30dp"
                android:layout_marginTop="19.98dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/lato"
                android:text="Confirm Password"
                android:textColor="#000100"
                android:textSize="12sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/cnfrm_pswd"
                android:layout_marginStart="30dp"
                android:layout_marginTop="7.51dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/lato"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="12sp"
                app:endIconDrawable="@drawable/show_password_selector"
                app:passwordToggleEnabled="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/password"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="44.47dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="2.5">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAuth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bio_btn"
                    android:fontFamily="@font/lato"
                    android:text="Cancel"
                    android:textColor="@color/accentColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvgap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/lato"
                    android:textColor="#000100"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/resetPasswordBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/login_btn"
                    android:fontFamily="@font/lato"
                    android:text="Confirm"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>